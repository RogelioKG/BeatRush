<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.notiva.beatrush.controller.GameOverPageController"
      prefHeight="400.0" prefWidth="600.0" alignment="CENTER" stylesheets="@../../css/all.css">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30" />
    </padding>

    <Label text="Game Over" styleClass="label-title"/>

    <HBox alignment="CENTER" spacing="30">
        <Button text="CONTINUE" styleClass="game-button" prefHeight="30" prefWidth="130" onAction="#onContinueButtonClick"/>
        <Button text="REPLAY" styleClass="game-button" prefHeight="30" prefWidth="130" onAction="#onReplayButtonClick"/>
    </HBox>

</VBox>
