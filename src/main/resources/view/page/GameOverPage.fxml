<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="org.notiva.beatrush.controller.GameOverPageController">
    <stylesheets>
        <URL value="@../../css/all.css"/>
        <URL value="@../../css/game-button.css"/>
        <URL value="@../../css/label-title.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="30" left="30" right="30" top="30"/>
    </padding>
    <Label styleClass="label-title" text="Game Over"/>
    <HBox alignment="CENTER" spacing="30">
        <Button onAction="#onContinueButtonClick" prefHeight="30" prefWidth="130" styleClass="game-button"
                text="CONTINUE"/>
        <Button onAction="#onReplayButtonClick" prefHeight="30" prefWidth="130" styleClass="game-button" text="REPLAY"/>
    </HBox>
</VBox>
